<Window x:Class="RxFromEventPatternSample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    <StackPanel>
        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
            <TextBox Text="{Binding Status1}"></TextBox>
            <TextBox Text="{Binding Status2}"></TextBox>
            <TextBox Text="{Binding StatusTimer}"></TextBox>
            <Button Command="{Binding StartCommand}">Start</Button>
            <Button Command="{Binding FireButtonClickCommand}">ClickEmurate</Button>
            <Button Command="{Binding StopOneCommand}">StopOne</Button>
            <Button Command="{Binding StopTwoCommand}">StopTwo</Button>
            <Button Command="{Binding DisposeButtonCommand}">DisposeButton</Button>
        </StackPanel>
    </StackPanel>
</Window>
